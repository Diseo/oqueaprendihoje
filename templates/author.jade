
mixin author(authorName)
  - var author = contents.authors[authorName + '.json']
  span.author
    if author
      if(author.metadata.twitter)
        a(target='_blank',href='//twitter.com/'+author.metadata.twitter)= author.metadata.name
      else
        a(href='mailto:'+author.metadata.email)= author.metadata.name
    else
      =authorName
